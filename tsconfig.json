{
  // https://www.typescriptlang.org/docs/handbook/tsconfig-json.html
  "compilerOptions": {
    "target": "ESNEXT",
    "module": "commonjs",
    "lib": ["dom", "esnext"],
    "jsx": "preserve",
    "noEmit": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "esModuleInterop": true
  },
  "exclude": ["node_modules", "public", ".cache"],
  "include": ["./src/**/*"]
}
