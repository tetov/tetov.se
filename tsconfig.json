{
  // https://www.typescriptlang.org/docs/handbook/tsconfig-json.html
  "compilerOptions": {
    "baseUrl": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "module": "ESNext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext"
  },
  "include": ["./src/**/*", "./gatsby-*.ts"]
}
